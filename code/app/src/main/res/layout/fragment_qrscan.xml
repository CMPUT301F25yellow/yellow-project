<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/qr_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black">

    <!-- Status bar spacer (auto-sized in Fragment) -->
    <View
        android:id="@+id/statusBarSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/surface_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Header (center title, NO back button) -->
    <RelativeLayout
        android:id="@+id/qrHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/surface_dark"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/statusBarSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/qrHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/qr_scan_title"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"/>
    </RelativeLayout>

    <!-- Content area -->
    <FrameLayout
        android:id="@+id/qrContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/qrHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Placeholderâ€”swap for your camera/QR view later -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/qr_text"
            android:textColor="@color/white"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>