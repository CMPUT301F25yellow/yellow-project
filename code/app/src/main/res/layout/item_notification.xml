<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/surface_dark"
    app:cardCornerRadius="14dp"
    app:cardUseCompatPadding="false"
    app:strokeColor="#2A2A2A"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Header row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Notification type icon -->
            <ImageView
                android:id="@+id/imgType"
                android:layout_width="22dp"
                android:layout_height="22dp"
                tools:src="@drawable/ic_notif"
                tools:tint="@color/green_400" />

            <!-- Notification title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                tools:text="Selected for Summer Music Festival" />

            <!-- Optional unread dot -->
            <View
                android:id="@+id/dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/bg_dot_green"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Notification time -->
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/on_surface_muted"
                android:textSize="12sp"
                tools:text="1h ago"/>
        </LinearLayout>

        <!-- Body message -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="13sp"
            android:textColor="@color/on_surface_muted"
            tools:text="Congratulations! You have been selected to attend the Summer Music Festival on Oct 20, 2025." />

        <!-- Optional action link (e.g., View Details) -->
        <TextView
            android:id="@+id/tvAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/brand_primary"
            tools:text="View Details"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
