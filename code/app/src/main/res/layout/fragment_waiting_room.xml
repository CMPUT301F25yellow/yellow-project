<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp">

    <!--IN PROGRESS-->

    <!-- Top App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@color/white"
            android:contentDescription="Back"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summer Music Festival"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Banner Image -->
    <ImageView
        android:id="@+id/eventBanner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/my_image"
        android:layout_marginBottom="16dp"
        android:contentDescription="Event banner" />

    <!-- Info Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1E1E1E"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:clipToOutline="true"
        android:elevation="2dp"
        android:backgroundTintMode="src_over"
        android:backgroundTint="#1E1E1E"
        android:radius="12dp">

        <!-- Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/my_image" />

            <TextView
                android:text="DateTime"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:text="Oct 20, 2025 at 6:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />


        <!-- Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/my_image"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

        <TextView
            android:text="Central Park"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Clock Icon -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/my_image"
        app:tint="@color/white"
        android:layout_marginBottom="12dp" />

    <!-- Waiting Text -->
    <TextView
        android:text="In Waiting Room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="4dp" />

    <TextView
        android:text="Please wait while the host starts the session."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#AAAAAA"
        android:textSize="13sp"
        android:layout_marginBottom="24dp" />

    <!-- User Count Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1E1E1E"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:clipToOutline="true"
        android:elevation="2dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/my_image"
            app:tint="@color/white"
            android:layout_marginEnd="8dp" />

        <TextView
            android:text="Total Users in the waiting room"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/userCount"
            android:text="12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Leave Button -->
    <Button
        android:id="@+id/leaveButton"
        android:text="Leave Waiting List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#8B0000"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />
</LinearLayout>
