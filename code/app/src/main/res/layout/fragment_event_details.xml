<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Status bar spacer -->
        <View
            android:id="@+id/statusBarSpacer"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <!-- App Bar -->
        <RelativeLayout
            android:id="@+id/eventDetailsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true" />

            <!-- Title -->
            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Summer Music Festival"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Poster -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1E1E1E">
                <ImageView
                    android:id="@+id/eventBanner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:contentDescription="@string/placeholder"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_image_icon" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Event Title and Organizer -->
            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:text="Summer Music Festival 2024"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="sans-serif-bold" />

            <TextView
                android:id="@+id/eventOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Downtown Recreation Centre"
                android:textColor="#B0B0B0"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- Event Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Date Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="image"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_clock"/>

                    <TextView
                        android:id="@+id/eventDateTime"
                        android:text="July 15 - 17, 2024"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Location Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="image"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_pin" />

                    <TextView
                        android:id="@+id/eventLocation"
                        android:text="Central Park Amphitheater, Downtown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Geolocation Row -->
                <LinearLayout
                    android:id="@+id/geolocationRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/eventGeolocation"
                        tools:text="Geolocation is required for check-in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Max Entrants Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/eventMaxEntrants"
                        android:text="Up to 1000 entrants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Current Entrants Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/eventEntrants"
                        android:text="Currently 0 entrants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Event Description Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About this event"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="24dp"/>

            <!-- Event Description Header -->
            <TextView
                android:id="@+id/eventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="Join us for an unforgettable evening of live music..."
                android:textColor="#E0E0E0"
                android:lineSpacingExtra="4dp"/>

            <!-- Lottery Criteria -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#2A2A2A"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lottery Criteria &amp; Guidelines"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center_vertical"/>

                    <!-- Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/lottery_criteria"
                        android:textColor="#E0E0E0"
                        android:textSize="13sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Spacer to push button to bottom -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Floating Action Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/black">

            <Button
                android:id="@+id/joinEventButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join Waiting List"
                android:backgroundTint="@color/white"
                android:textColor="@android:color/black"
                android:paddingVertical="14dp"/>

            <!-- Opt out of notification button (not yet implemented) -->
<!--            <com.google.android.material.switchmaterial.SwitchMaterial-->
<!--                android:id="@+id/notificationSwitch"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Opt Out of Notifications"-->
<!--                android:textColor="@color/white"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginTop="8dp"/>-->
        </LinearLayout>

    </LinearLayout>
</ScrollView>