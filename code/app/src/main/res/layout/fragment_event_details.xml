<?xml version="1.0" encoding="utf-8"?>
<!--author: waylon -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Status bar spacer -->
        <View
            android:id="@+id/statusBarSpacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/surface_dark"/>

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/eventDetailsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface_dark"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/white"/>

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Summer Music Festival"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Poster -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1E1E1E"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/eventBanner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_image_icon" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Event Title and Organizer -->
            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:text="Summer Music Festival 2024"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="sans-serif-bold" />

            <TextView
                android:id="@+id/eventOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Downtown Recreation Centre"
                android:textColor="@color/subtextgrey"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- Info Rows -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Date Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar_today"
                        app:tint="@color/icon_purple" />

                    <TextView
                        android:id="@+id/eventDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="July 15 - 17, 2024"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <!-- Location Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_pin"
                        app:tint="@color/icon_purple" />

                    <TextView
                        android:id="@+id/eventLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Central Park Amphitheater, Downtown"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"/>

                </LinearLayout>

                <!-- Geolocation Row -->
                <LinearLayout
                    android:id="@+id/geolocationRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_warning_outlined"
                        app:tint="@color/icon_purple" />

                    <TextView
                        android:id="@+id/eventGeolocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Geolocation is required for check-in"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"/>

                </LinearLayout>

                <!-- Max Entrants Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_groups"
                        app:tint="@color/icon_purple" />

                    <TextView
                        android:id="@+id/eventMaxEntrants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Up to 1000 entrants"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"/>

                </LinearLayout>

                <!-- Current Entrants Row -->
                <LinearLayout
                    android:id="@+id/entrantsRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_group"
                        app:tint="@color/icon_purple" />

                    <TextView
                        android:id="@+id/eventEntrants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="246 entrants currently in waiting list"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- About this event -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About this event"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/eventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="@string/test_description"
                android:textColor="#E0E0E0"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="8dp"/>

            <!-- Lottery Criteria -->
            <!-- Button taken from fragment_waiting_room.xml -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLotteryGuidelines"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Lottery Criteria and Guidelines"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@android:color/white"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <!-- Floating Action Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/black">

            <Button
                android:id="@+id/joinEventButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join Waiting List"
                android:backgroundTint="@color/pink_bg"
                android:textColor="@android:color/white"
                android:paddingVertical="14dp"/>

<!--            <com.google.android.material.switchmaterial.SwitchMaterial-->
<!--                android:id="@+id/notificationSwitch"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Opt Out of Notifications"-->
<!--                android:textColor="@color/white"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginTop="8dp"/>-->
        </LinearLayout>

    </LinearLayout>
</ScrollView>