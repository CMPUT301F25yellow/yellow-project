<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/surface_dark"
    app:cardCornerRadius="14dp"
    app:strokeColor="#2A2A2A"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgType"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/notifications"
                android:src="@drawable/ic_eventscal"
                tools:tint="@color/brand_primary" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                tools:text="Selected for "/>
            <View
                android:id="@+id/dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/bg_dot_green"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/on_surface_muted"
                android:textSize="12sp"
                tools:text="5m ago"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="13sp"
            android:textColor="@color/on_surface_muted"
            tools:text="Congratulations! You have been selected for"/>

        <!-- accept / reject -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccept"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="@string/accept"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:backgroundTint="@color/green_400"
                android:textColor="@color/black"
                app:iconPadding="8dp"
                app:iconGravity="textStart" />

            <Space android:layout_width="12dp" android:layout_height="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReject"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="@string/reject"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:backgroundTint="@color/danger_red"
                android:textColor="@color/danger_red_on"
                app:iconPadding="8dp"
                app:iconGravity="textStart" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewDetails"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:text="@string/view_event_details"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:strokeColor="@color/on_surface_muted" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>